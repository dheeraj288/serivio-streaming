<!-- layout.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Serivio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
  </head>

  <body class="bg-black text-white min-h-screen font-sans">
    <%= render 'shared/navbar' %>

    <main class="pt-20 max-w-full mx-auto px-6">
      <%= yield %>
    </main>

    <footer class="text-gray-500 text-sm text-center mt-12 py-6 border-t border-gray-800">
      &copy; <%= Time.current.year %> Serivio. All rights reserved.
    </footer>
  </body>
</html>
