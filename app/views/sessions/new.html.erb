<!-- Login Page -->
<section class="min-h-screen flex items-center justify-center bg-black px-4">
  <div class="max-w-md w-full bg-[#141414] p-8 rounded-lg shadow-2xl">
    <h2 class="text-3xl font-bold text-white text-center mb-6">Welcome Back</h2>

    <% if flash[:alert] %>
      <div class="bg-red-600 text-white p-3 rounded text-sm mb-4">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: login_path, method: :post, local: true, data: { turbo: false }, html: { class: "space-y-5" } do %>

      <div>
        <%= label_tag :email, "Email", class: "block text-sm text-gray-300 mb-1" %>
        <%= email_field_tag :email, params[:email], class: "w-full px-4 py-2 bg-gray-800 text-white border border-gray-700 rounded focus:ring-2 focus:ring-[#E50914]" %>
      </div>

      <div>
        <%= label_tag :password, "Password", class: "block text-sm text-gray-300 mb-1" %>
        <%= password_field_tag :password, nil, class: "w-full px-4 py-2 bg-gray-800 text-white border border-gray-700 rounded focus:ring-2 focus:ring-[#E50914]" %>
      </div>

      <div>
        <%= submit_tag "Log In", class: "w-full bg-[#E50914] hover:bg-[#f40612] text-white font-semibold py-3 rounded-lg transition" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-sm text-gray-400">
      Donâ€™t have an account?
      <%= link_to "Sign up", signup_path, class: "text-[#E50914] hover:underline" %>
    </p>
  </div>
</section>
