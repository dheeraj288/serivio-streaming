<!-- app/views/users/new.html.erb or signup page -->

<section class="min-h-screen flex items-center justify-center bg-black px-4">
  <div class="max-w-md w-full bg-[#141414] p-8 rounded-lg shadow-2xl">
    <h2 class="text-3xl font-bold text-white text-center mb-6">Create your account</h2>

    <%= form_with model: @user, url: signup_path, local: true, html: { class: "space-y-5" } do |f| %>

      <% if @user.errors.any? %>
        <div class="bg-red-600 text-white p-3 rounded text-sm">
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, class: "block text-sm text-gray-300 mb-1" %>
        <%= f.text_field :name, class: "w-full px-4 py-2 bg-gray-800 text-white border border-gray-700 rounded focus:ring-2 focus:ring-[#E50914]" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm text-gray-300 mb-1" %>
        <%= f.email_field :email, class: "w-full px-4 py-2 bg-gray-800 text-white border border-gray-700 rounded focus:ring-2 focus:ring-[#E50914]" %>
      </div>

      <div>
        <%= f.label :phone, class: "block text-sm text-gray-300 mb-1" %>
        <%= f.telephone_field :phone, class: "w-full px-4 py-2 bg-gray-800 text-white border border-gray-700 rounded focus:ring-2 focus:ring-[#E50914]" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm text-gray-300 mb-1" %>
        <%= f.password_field :password, class: "w-full px-4 py-2 bg-gray-800 text-white border border-gray-700 rounded focus:ring-2 focus:ring-[#E50914]" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm text-gray-300 mb-1" %>
        <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 bg-gray-800 text-white border border-gray-700 rounded focus:ring-2 focus:ring-[#E50914]" %>
      </div>

      <div>
        <%= f.submit "Sign Up", class: "w-full bg-[#E50914] hover:bg-[#f40612] text-white font-semibold py-3 rounded-lg transition" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-sm text-gray-400">
      Already have an account?
      <%= link_to "Log in", login_path, class: "text-[#E50914] hover:underline" %>
    </p>
  </div>
</section>
