<!-- Netflix-style Hero + Movie Row -->

<!-- Hero Section -->
<section id="hero-section" class="relative w-full h-[450px] md:h-[600px] bg-cover bg-center transition-all duration-1000 ease-in-out rounded-b-lg shadow-lg"
         style="background-image: url('https://picsum.photos/1600/900?random=1');">

  <!-- Dark gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-black opacity-90 rounded-b-lg"></div>

  <!-- Hero Text Content -->
  <div class="absolute bottom-12 left-6 md:left-16 max-w-xl text-white z-10 animate-fade-in">
    <h2 class="text-4xl md:text-6xl font-extrabold drop-shadow-lg transition duration-500">Featured Movie Title</h2>
    <p class="mt-4 text-lg md:text-xl text-gray-300 max-w-md drop-shadow-md transition duration-500">
      This is a sample description of the featured movie or show, mimicking Netflix’s hero section.
    </p>
    
    <!-- Action Buttons -->
    <div class="mt-6 flex space-x-4">
      <button class="flex items-center bg-[#E50914] hover:bg-[#f40612] px-6 py-3 rounded font-semibold text-lg drop-shadow-lg transition duration-300 transform hover:scale-105">
        <svg class="w-6 h-6 mr-2 fill-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg> 
        Play
      </button>
      <button class="bg-gray-800 bg-opacity-70 hover:bg-gray-700 px-6 py-3 rounded font-semibold text-lg transition duration-300 transform hover:scale-105">
        More Info
      </button>
    </div>
  </div>
</section>

<!-- Background Rotating Script -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hero = document.getElementById("hero-section");
    const images = [
      "https://picsum.photos/1600/900?random=1",
      "https://picsum.photos/1600/900?random=2",
      "https://picsum.photos/1600/900?random=3",
      "https://picsum.photos/1600/900?random=4"
    ];
    let index = 0;

    setInterval(() => {
      index = (index + 1) % images.length;
      hero.style.backgroundImage = `url('${images[index]}')`;
    }, 5000);
  });
</script>

<!-- Movie Row Section -->
<section class="mt-12 px-6 max-w-full overflow-x-hidden">
  <h3 class="text-2xl font-bold mb-6 px-2">Recommended for You</h3>
  <div class="flex space-x-4 overflow-x-auto pb-4 scrollbar-hide">
    <% 10.times do |i| %>
      <div class="relative group min-w-[160px] h-[240px] rounded-lg overflow-hidden shadow-lg transform transition duration-300 cursor-pointer hover:scale-105">
        <img 
          src="https://picsum.photos/200/300?random=<%= i %>" 
          alt="Movie Thumbnail" 
          class="w-full h-full object-cover transition-opacity duration-300 group-hover:opacity-80"
          onerror="this.onerror=null; this.src='/fallback.jpg';"
        >
        <!-- Info on hover -->
        <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-70 text-white text-xs p-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <p class="truncate">Movie Title <%= i + 1 %></p>
          <p class="text-gray-400">Action • 2025</p>
        </div>
      </div>
    <% end %>
  </div>
</section>

<!-- Optional Scrollbar Hide Style (if not using Tailwind plugin) -->
<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  @keyframes fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }
</style>
