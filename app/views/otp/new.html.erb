<section class="min-h-screen flex items-center justify-center bg-black px-4">
  <div class="max-w-md w-full bg-[#141414] p-8 rounded-lg shadow-2xl">
    
    <h1 class="text-3xl font-bold text-white text-center mb-6">🔐 Verify Your OTP</h1>
    
    <% if flash[:alert] %>
      <div class="bg-red-600 text-white p-3 rounded text-sm mb-4">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: verify_otp_path(email: @user.email), method: :post, local: true, data: { turbo: false }, html: { class: "space-y-5" } do %>
      
      <div>
        <%= label_tag :otp_code, "Enter the 6-digit OTP sent to your email", class: "block text-sm text-gray-300 mb-2" %>
        <%= text_field_tag :otp_code, nil, placeholder: "e.g. 123456", class: "w-full px-4 py-2 bg-gray-800 text-white border border-gray-700 rounded-lg focus:ring-2 focus:ring-[#E50914]" %>
      </div>

      <div>
        <%= submit_tag "Verify OTP", class: "w-full bg-[#E50914] hover:bg-[#f40612] text-white font-semibold py-3 rounded-lg transition" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-sm text-gray-400">
      Didn't receive the code?
      <%= link_to "Resend OTP", resend_otp_path(email: @user.email), class: "text-[#E50914] hover:underline" %>
    </p>
  </div>
</section>
